{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": { "ignoreUnknown": false, "includes": ["**"] },
  "formatter": { "enabled": true, "indentStyle": "space" },
  "linter": {
    "domains": {
      "project": "all",
      "test": "all",
      "vue": "recommended"
    }
  },
  "javascript": { "formatter": { "quoteStyle": "single" } },
  "html": {
    "formatter": { "enabled": true }
  }
}
